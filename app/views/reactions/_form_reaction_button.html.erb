<%= form_for(Reaction.new, html: {class: "reaction_button reaction_button_for_#{parent.class.to_s.downcase}", id: nil}) do |f| %>
  <%= f.hidden_field(:reaction_type, value: type) %>
  <%= f.hidden_field(:reactable_id, value: parent.id) %>
  <%= f.hidden_field(:reactable_type, value: parent.class) %>
  <%= f.submit(type, class: ("reacted" if user_has_reacted_with_type?(type, parent)) ) %>
<% end %>